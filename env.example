# Configuración de OpenAI
OPENAI_API_KEY=tu_api_key_de_openai
OPENAI_ORGANIZATION_ID=tu_organization_id_opcional
OPENAI_TIMEOUT_MS=30000
OPENAI_MAX_RETRIES=3
OPENAI_TEXT_TEMPERATURE=0.7
OPENAI_TEXT_MAX_TOKENS=800
OPENAI_TEXT_TOP_P=1
OPENAI_TEXT_PRESENCE_PENALTY=0
OPENAI_TEXT_FREQUENCY_PENALTY=0
OPENAI_IMAGE_TEMPERATURE=0.7
OPENAI_IMAGE_MAX_TOKENS=600

# Configuración del Bot
BOT_PREFIX=#bot
LOG_LEVEL=info
MODEL_SELECTION_STRATEGY=balanced # balanced|cost_optimized|performance_optimized
WHATSAPP_FORMAT_ENHANCE=true
WHATSAPP_ADD_SEPARATORS=false

# Números autorizados (opcional, dejar vacío para permitir todos)
# Formato: +5491112345678,+5491187654321
ALLOWED_NUMBERS=

# Configuración de la base de datos
DB_PATH=./data/users.db

# Configuración del servidor
PORT=3000
NODE_ENV=production 
CORS_ORIGIN=

# Directorio temporal para media
TEMP_DIR=/tmp/botcito

# Puppeteer (Chromium del contenedor)
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium

# Límites/flujo de conversación
RATE_LIMIT_PER_MINUTE=10
MAX_TEXT_CHARS=4000
HISTORY_LEN=20

# Opcional (tests/CI): deshabilita WhatsApp al arrancar la app
DISABLE_WHATSAPP=false