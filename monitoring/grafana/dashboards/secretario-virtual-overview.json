  "panels": [
    {
      "type": "stat",
      "title": "OpenAI Breaker",
      "gridPos": { "h": 5, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "max(openai_breaker_open)",
          "legendFormat": "breaker",
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "Cerrado" }, "1": { "text": "Abierto" } } }
          ],
          "thresholds": { "mode": "absolute", "steps": [ { "color": "green", "value": null }, { "color": "red", "value": 1 } ] }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Conversaciones activas",
      "gridPos": { "h": 5, "w": 6, "x": 6, "y": 0 },
      "targets": [
        {
          "expr": "max(bot_active_conversations)",
          "legendFormat": "active",
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "none",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": { "defaults": { "thresholds": { "mode": "absolute", "steps": [ { "color": "green" } ] } }, "overrides": [] }
    },
    {
      "type": "timeseries",
      "title": "Duración llamadas OpenAI p95 (s)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(openai_request_duration_seconds_bucket[5m])))",
          "legendFormat": "p95",
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ],
      "options": { "legend": { "showLegend": true }, "tooltip": { "mode": "single" } }
    },
    {
      "type": "bargauge",
      "title": "Resultados por handler (últimos 5m)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 5 },
      "targets": [
        {
          "expr": "sum by (handler, result) (increase(bot_handler_results_total[5m]))",
          "legendFormat": "{{handler}} {{result}}",
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ],
      "options": { "displayMode": "gradient", "orientation": "horizontal", "showUnfilled": true }
    },
    {
      "type": "timeseries",
      "title": "CPU (user) rate",
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 13 },
      "targets": [
        {
          "expr": "rate(process_cpu_user_seconds_total[5m])",
          "legendFormat": "cpu_user",
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "RSS Memory (MiB)",
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 13 },
      "targets": [
        {
          "expr": "process_resident_memory_bytes / 1024 / 1024",
          "legendFormat": "rss",
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ],
      "fieldConfig": { "defaults": { "unit": "mebibytes" }, "overrides": [] }
    },
    {
      "type": "table",
      "title": "Errores por handler (1h)",
      "gridPos": { "h": 7, "w": 24, "x": 0, "y": 20 },
      "targets": [
        {
          "expr": "sum by (handler) (increase(bot_handler_results_total{result=\"error\"}[1h]))",
          "legendFormat": "{{handler}}",
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ]
    }
  ],
